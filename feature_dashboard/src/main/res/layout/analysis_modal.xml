<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Recommendation"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/material_gray"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:layout_editor_absoluteX="30dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:scrollbarThumbVertical="@null"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spending"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingTop="10dp"
                    android:paddingStart="20dp"
                    android:textStyle="bold" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/spendingProgress"
                    app:rcAnimationEnable="true"
                    android:layout_height="15dp"
                    android:layout_width="250dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="3dp"
                    app:rcBackgroundColor="#15000000"
                    app:rcBackgroundPadding="2dp"
                    app:rcMax="100"
                    app:rcProgress="0"
                    app:rcProgressColor="@color/teal_700"
                    app:rcRadius="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saving"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:textStyle="bold" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/savingProgress"
                    app:rcAnimationEnable="true"
                    android:layout_height="15dp"
                    android:layout_width="250dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="3dp"
                    app:rcBackgroundColor="#15000000"
                    app:rcBackgroundPadding="2dp"
                    app:rcMax="100"
                    app:rcProgress="0"
                    app:rcProgressColor="@color/teal_700"
                    app:rcRadius="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Investment"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:textStyle="bold" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/investProgress"
                    app:rcAnimationEnable="true"
                    android:layout_height="15dp"
                    android:layout_width="250dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="3dp"
                    app:rcBackgroundColor="#15000000"
                    app:rcBackgroundPadding="2dp"
                    app:rcMax="100"
                    app:rcProgress="0"
                    app:rcProgressColor="@color/teal_700"
                    app:rcRadius="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compliance"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:textStyle="bold" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/complianceProgress"
                    app:rcAnimationEnable="true"
                    android:layout_height="15dp"
                    android:layout_width="250dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="3dp"
                    app:rcBackgroundColor="#15000000"
                    app:rcBackgroundPadding="2dp"
                    app:rcMax="100"
                    app:rcProgress="0"
                    app:rcProgressColor="@color/teal_700"
                    app:rcRadius="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debt"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:textStyle="bold" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/debtProgress"
                    app:rcAnimationEnable="true"
                    android:layout_height="15dp"
                    android:layout_width="250dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="3dp"
                    app:rcBackgroundColor="#15000000"
                    app:rcBackgroundPadding="2dp"
                    app:rcMax="100"
                    app:rcProgress="0"
                    app:rcProgressColor="@color/teal_700"
                    app:rcRadius="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Analysis: "
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:paddingTop="10dp"
                    android:paddingStart="40dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>